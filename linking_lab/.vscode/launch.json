{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "GDB Debugging",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/linking_lab",  // 실행 파일 경로
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/build",
        "environment": [],
        "externalConsole": true,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",  // GDB 경로
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }
  